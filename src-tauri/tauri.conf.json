{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Video Cropper",
  "version": "0.1.0",
  "identifier": "com.example.video-cropper",
  "build": {
    "beforeBuildCommand": "",
    "beforeDevCommand": "",
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "title": "视频裁剪器",
        "width": 1320,
        "height": 860,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; img-src 'self' asset: data: blob: http://asset.localhost; media-src 'self' asset: data: blob: http://asset.localhost; style-src 'self' 'unsafe-inline'; script-src 'self' 'unsafe-inline'",
      "assetProtocol": {
        "enable": true,
        "scope": ["$DESKTOP/**", "$VIDEO/**", "$DOWNLOAD/**", "$HOME/**"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": ["nsis"],
    "resources": {
      "../bin/ffmpeg.exe": "bin/ffmpeg.exe"
    }
  }
}
